;
; Entry:
;
; X = offset into configure table for item's metadata
;
; Exit:
;
; Y = shift count
;
; Preserves: A/X/C
; 
getShiftCount:
                pha
                lda configureTable+1,x
                and #%00000111
                tay
                pla
                rts


;-------------------------------------------------------------------------
;
; Get mask bit count for configure item's data, given offset in
; configure table for its metadata.
;
; Entry:
;
; X = offset into configure table for item's metadata
;
; Exit:
;
; Y = mask bit count, -1 (0 = 1 bits ... 7 = 8 bits)
;
; Preserves: A/X
; 
getMaskCount:
                pha
                lda configureTable,x; "."
                lsr a
                lsr a
                lsr a
                and #7
                tay
                pla
                rts

maskByBitCount:
                .byte %00000001
                .byte %00000011
                .byte %00000111
                .byte %00001111
                .byte %00011111
                .byte %00111111
                .byte %01111111
                .byte %11111111

